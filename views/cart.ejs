<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
</head>
<body>
  <h2>Your Cart</h2>

  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <ul>
      <% cart.forEach(item => { %>
        <li>
          <b><%= item.name %></b> - $<%= item.price %> x <%= item.quantity %>
        </li>
      <% }); %>
    </ul>

    <p>
      <b>Total:</b>
      $<%= cart.reduce((total, item) => total + (item.price * item.quantity), 0) %>
    </p>
  <% } %>
   
  <a href="/">Back to Home</a>
</body>
</html>
            