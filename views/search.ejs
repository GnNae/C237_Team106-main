<!DOCTYPE html>
<html>
<head>
  <title>Pet Search</title>
  <style>
    body {
      font-size: 20px;
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
      transition: background-color 0.3s, color 0.3s;
    }

    .dark-mode {
      background-color: #121212;
      color: #f0f0f0;
    }

    .light-mode {
      background-color: white;
      color: black;
    }

    h2, h3 {
      font-size: 28px;
    }

    b {
      font-size: 22px;
    }

    input, button {
      font-size: 18px;
      padding: 8px;
      margin: 5px;
    }

    .dark-mode input, .dark-mode button {
      background-color: #333;
      color: #f0f0f0;
      border: 1px solid #888;
    }

    .light-mode input, .light-mode button {
      background-color: white;
      color: black;
      border: 1px solid #ccc;
    }

    img {
      max-width: 100%;
      height: auto;
    }

    .container {
      margin: 30px auto;
      width: 80%;
      text-align: left;
    }

    .back-button {
      position: absolute;
      top: 20px;
      left: 20px;
      text-decoration: none;
      font-size: 18px;
      padding: 10px 15px;
      background-color: #007BFF;
      color: white;
      border-radius: 5px;
      font-weight: bold;
    }

    .back-button:hover {
      background-color: #0056b3;
    }

    .toggle-button {
      position: absolute;
      top: 20px;
      right: 20px;
      font-size: 16px;
      padding: 10px 15px;
      border-radius: 5px;
      background-color: #444;
      color: green;
      border: none;
      cursor: pointer;
    }

    .toggle-button:hover {
      background-color: #666;
    }
  </style>
</head>
<body>

  <!-- Back Button -->
  <a class="back-button" href="/purchase">‚Üê Back</a>

  <!-- Toggle Dark Mode Button -->
  <button class="toggle-button" onclick="toggleDarkMode()">Toggle Dark Mode</button>

  <h2>Search Pets</h2>

  <form action="/search" method="POST">
    <input type="text" name="query" placeholder="Enter Pet name" required />
    <button type="submit">Search</button>
  </form>

  <h3>Results:</h3>

  <% if (results.length > 0) { %>

    <div class="container">
      <br>
      <div class="text-center"><h2>Pet Details:</h2></div>
      <br>

      <% results.forEach((result, index) => { %>
        <div>
          <h2><b>No. <%= index + 1 %> Match Result</b></h2>
          <p><b>Pet Name:</b><br> <%= result.name %></p>
          <p><b>Price:</b><br> $<%= result.price %></p>
          <p><b>Pet Image:</b><br> <img src="<%= result.image %>" width="50%"></p>
          <p><b>Breed:</b><br> <%= result.breed %></p>
          <hr>
        </div>
      <% }); %>

    </div>

  <% } else { %>
    <p>No Pet Name found.</p>
  
  <% } %>

  <script>
    function toggleDarkMode() {
      const body = document.body;

      if (body.classList.contains("dark-mode")) {
        body.classList.remove("dark-mode");
        body.classList.add("light-mode");
        localStorage.setItem("theme", "light");
      } else {
        body.classList.remove("light-mode");
        body.classList.add("dark-mode");
        localStorage.setItem("theme", "dark");
      }
    }

    // Load saved theme on page load
    window.onload = () => {
      const savedTheme = localStorage.getItem("theme") || "light";
      document.body.classList.add(savedTheme + "-mode");
    };
  </script>

  <form action="/add-to-cart" method="POST">
    <input type="hidden" name="pet_id" value="<%= result.id %>">
    <input type="hidden" name="name" value="<%= result.name %>">
    <input type="hidden" name="price" value="<%= result.price %>">
    <button type="submit">Add to Cart</button>
  </form>





</body>
</html>
